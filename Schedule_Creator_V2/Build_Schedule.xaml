<Page
    x:Class="Schedule_Creator_V2.Build_Schedule"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Schedule_Creator_V2"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Build_Schedule"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid>
        <Border
            Margin="20"
            Padding="20"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Background="White"
            BorderBrush="#DDD"
            BorderThickness="1"
            CornerRadius="10">
            <Grid Margin="20" Background="white">

                <Grid.RowDefinitions>

                    <RowDefinition Height="AUTO" />
                    <RowDefinition Height="AUTO" />

                </Grid.RowDefinitions>

                <StackPanel
                    Grid.Row="0"
                    HorizontalAlignment="Right"
                    Orientation="Horizontal">

                    <Button
                        Height="50"
                        Margin="10"
                        Content="Add Row" />

                    <Button
                        Height="50"
                        Margin="10"
                        Content="Add Row" />

                    <Button 
                        Height="50" 
                        Margin="10"
                        Content="Save Schedule"
                        />

                    <Button
                        Height="50"
                        Margin="10"
                        Content="Clear Schedule"
                        />
                    
                    
                </StackPanel>
                <DataGrid x:Name="ScheduleGrid" Grid.Row="1">
                    <DataGrid.Columns>
                        <DataGridTextColumn
                            x:Name="MonCol"
                            Width="*"
                            Binding="{Binding AvailMon}"
                            Header="Monday" 
                            Visibility="Hidden"
                            />

                        <DataGridTextColumn
                            x:Name="TueCol"
                            Width="*"
                            Binding="{Binding AvailTue}"
                            Header="Tuesday" 
                            Visibility="Hidden"/>

                        <DataGridTextColumn
                            x:Name="WedCol"
                            Width="*"
                            Binding="{Binding AvailWed}"
                            Header="Wed" 
                            Visibility="Hidden"/>

                        <DataGridTextColumn
                            x:Name="ThuCol"
                            Width="*"
                            Binding="{Binding AvailThu}"
                            Header="Thu" 
                            Visibility="Hidden"/>

                        <DataGridTextColumn
                            x:Name="FriCol"
                            Width="*"
                            Binding="{Binding AvailFri}"
                            Header="Fri" 
                            Visibility="Hidden"/>

                        <DataGridTextColumn
                            x:Name="SatCol"
                            Width="*"
                            Binding="{Binding AvailSat}"
                            Header="Sat" 
                            Visibility="Hidden"/>

                        <DataGridTextColumn
                            x:Name="SunCol"
                            Width="*"
                            Binding="{Binding AvailSun}"
                            Header="Sun" 
                            Visibility="Hidden"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>
    </Grid>
</Page>
