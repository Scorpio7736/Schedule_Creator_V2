<Page x:Class="Schedule_Creator_V2.Build_Schedule"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Schedule_Creator_V2"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Build_Schedule">

    <Border Margin="10" Background="White" CornerRadius="10" BorderBrush="Gray" BorderThickness="1">
        <Grid Margin="20" >
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Date Picker with Label -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10" HorizontalAlignment="Center">
                <TextBlock Text="Select Week:" VerticalAlignment="Center" FontWeight="Bold" Margin="0,0,10,0"/>
                <DatePicker x:Name="ScheduleDatePicker" Width="200" SelectedDateChanged="FillGrid"/>
            </StackPanel>

            <!-- DataGrid -->
            <DataGrid Grid.Row="1" x:Name="ScheduleDataGrid" AutoGenerateColumns="False" HeadersVisibility="Column" CanUserAddRows="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Monday Shift" Binding="{Binding mondayShift}" Width="*"/>
                    <DataGridTextColumn Header="Tuesday Shift" Binding="{Binding tuesdayShift}" Width="*"/>
                    <DataGridTextColumn Header="Wednesday Shift" Binding="{Binding wednesdayShift}" Width="*"/>
                    <DataGridTextColumn Header="Thursday Shift" Binding="{Binding thursdayShift}" Width="*"/>
                    <DataGridTextColumn Header="Friday Shift" Binding="{Binding fridayShift}" Width="*"/>
                    <DataGridTextColumn Header="Saturday Shift" Binding="{Binding saturdayShift}" Width="*"/>
                    <DataGridTextColumn Header="Sunday Shift" Binding="{Binding sundayShift}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Border>
</Page>
