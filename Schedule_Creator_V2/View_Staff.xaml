<Page
    x:Class="Schedule_Creator_V2.View_Staff"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Schedule_Creator_V2"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="View_Staff"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Border Background="White" Margin="10" CornerRadius="10" BorderBrush="Gray" BorderThickness="1">
        <Grid Margin="20">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="2*" />
                </Grid.ColumnDefinitions>

                <!--  Staff Selector + View Button  -->
                <StackPanel
                    Grid.Row="0"
                    Grid.ColumnSpan="2"
                    Margin="0,0,0,10"
                    VerticalAlignment="Top"
                    Orientation="Horizontal">
                    <Label
                        Name="SelectStaffLabel"
                        Margin="0,0,10,0"
                        VerticalAlignment="Center"
                        FontWeight="Bold"
                        Content="Select Staff Member:" />
                    <ComboBox
                        Name="StaffSelector"
                        Width="200"
                        Margin="0,0,10,0"
                        SelectionChanged="StaffSelector_SelectionChanged"
                        DisplayMemberPath="displayName"
                        />
                </StackPanel>

                <!--  Left Side: Display Info  -->
                <StackPanel
                    Grid.Row="1"
                    Grid.Column="0"
                    Margin="10"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top">
                    <TextBlock FontWeight="Bold" Text="First Name:" />
                    <TextBlock Name="FirstNameText" Margin="0,0,0,10" />

                    <TextBlock FontWeight="Bold" Text="Middle Name:" />
                    <TextBlock Name="MiddleNameText" Margin="0,0,0,10" />

                    <TextBlock FontWeight="Bold" Text="Last Name:" />
                    <TextBlock Name="LastNameText" Margin="0,0,0,10" />

                    <TextBlock FontWeight="Bold" Text="Job Position:" />
                    <TextBlock Name="JobPositionText" Margin="0,0,0,10" />

                    <TextBlock FontWeight="Bold" Text="Student Email:" />
                    <TextBlock Name="EmailText" Margin="0,0,0,10" />

                    <TextBlock FontWeight="Bold" Text="Belay Certified"/>
                    <TextBlock Name="IsCertText" Margin="0,0,0,10" />
                </StackPanel>

                <!--  Right Side: Availability Grid  -->
                <StackPanel
                    Grid.Row="1"
                    Grid.Column="1"
                    Margin="10"
                    HorizontalAlignment="Center">

                    <TextBlock
                        FontWeight="Bold"
                        FontSize="14"
                        Text="Availabilities"
                        Margin="0,0,0,5" />

                    <DataGrid
                        Name="AvailabilityDataGrid"
                        AutoGenerateColumns="False"
                        HeadersVisibility="Column"
                        CanUserAddRows="False"
                        IsReadOnly="True"
                        Width="auto"
                        Height="auto"
                        MinHeight="200">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Day of Week" Binding="{Binding day}" Width="*" />
                            <DataGridTextColumn Header="Avail Times" Binding="{Binding availTimes}" Width="*" />
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</Page>
