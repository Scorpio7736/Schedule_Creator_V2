<Page
    x:Class="Schedule_Creator_V2.Add_Belay_Cert"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Schedule_Creator_V2"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Add_Belay_Cert"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid>
        <Border
            Margin="20"
            Padding="20"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Background="White"
            BorderBrush="#DDD"
            BorderThickness="1"
            CornerRadius="10">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!--  Form Content  -->
                <StackPanel Grid.Row="0" Margin="0,0,0,10">
                    <!--  Staff Selector  -->
                    <StackPanel Margin="0,0,0,15">
                        <Label
                            x:Name="StaffSelectorLabel"
                            Margin="0,0,0,5"
                            Content="Select Staff"
                            FontWeight="SemiBold" />
                        <ComboBox
                            x:Name="StaffSelector"
                            Height="30"
                            DisplayMemberPath="displayName" />
                    </StackPanel>

                    <!--  Certification Date  -->
                    <StackPanel Margin="0,0,0,15">
                        <Label
                            x:Name="CertDatePickerLabel"
                            Margin="0,0,0,5"
                            Content="Certification Date"
                            FontWeight="SemiBold" />
                        <DatePicker x:Name="CertDatePicker" Height="30" />
                    </StackPanel>

                    <!--  Expiration Date  -->
                    <StackPanel Margin="0,0,0,15">
                        <Label
                            x:Name="ExpireDatePickerLabel"
                            Margin="0,0,0,5"
                            Content="Expiration Date"
                            FontWeight="SemiBold" />
                        <DatePicker x:Name="ExpireDatePicker" Height="30" />
                    </StackPanel>
                </StackPanel>

                <!--  Buttons  -->
                <StackPanel
                    Grid.Row="1"
                    HorizontalAlignment="Right"
                    Orientation="Horizontal">
                    <Button
                        x:Name="SaveButton"
                        Width="100"
                        Height="35"
                        Margin="0,0,10,0"
                        Click="SaveButton_Click"
                        Content="Save" />
                    <Button
                        x:Name="CancelButton"
                        Width="100"
                        Height="35"
                        Margin="0,0,10,0"
                        Click="CancelButton_Click"
                        Content="Cancel" />
                    <Button
                        x:Name="RemoveCertButton"
                        Width="150"
                        Height="35"
                        Click="RemoveCertButton_Click"
                        Content="Remove Certification" />
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>
