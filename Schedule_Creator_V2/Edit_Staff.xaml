<Page
    x:Class="Schedule_Creator_V2.Edit_Staff"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Schedule_Creator_V2"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Edit_Staff"
    d:DesignHeight="600"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Border
        Margin="20"
        Padding="20"
        Background="White"
        CornerRadius="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!--  Staff Selection  -->
            <StackPanel
                Margin="0,0,0,20"
                HorizontalAlignment="Center"
                Orientation="Horizontal">
                <Label
                    x:Name="Staff_Member_Label"
                    Margin="0,0,10,0"
                    VerticalAlignment="Center"
                    Content="Staff Member:" />
                <ComboBox
                    x:Name="StaffSelector"
                    Width="250"
                    DisplayMemberPath="displayName"
                    SelectionChanged="StaffSelected" />
            </StackPanel>

            <!--  Form Fields  -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="1.5*" />
                </Grid.ColumnDefinitions>

                <!--  Staff Info Form  -->
                <Grid Grid.Column="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Label
                        x:Name="FirstNameLabel"
                        Grid.Row="0"
                        Grid.Column="0"
                        Margin="0,5"
                        VerticalAlignment="Center"
                        Content="First Name:" />
                    <TextBox
                        x:Name="FirstNameBox"
                        Grid.Row="0"
                        Grid.Column="1"
                        Margin="5" />

                    <Label
                        x:Name="MiddleNameLabel"
                        Grid.Row="1"
                        Grid.Column="0"
                        Margin="0,5"
                        VerticalAlignment="Center"
                        Content="Middle Name:" />
                    <TextBox
                        x:Name="MiddleNameBox"
                        Grid.Row="1"
                        Grid.Column="1"
                        Margin="5" />

                    <Label
                        x:Name="LastNameLabel"
                        Grid.Row="2"
                        Grid.Column="0"
                        Margin="0,5"
                        VerticalAlignment="Center"
                        Content="Last Name:" />
                    <TextBox
                        x:Name="LastNameBox"
                        Grid.Row="2"
                        Grid.Column="1"
                        Margin="5" />

                    <Label
                        x:Name="Job_Position_Label"
                        Grid.Row="3"
                        Grid.Column="0"
                        Margin="0,5"
                        VerticalAlignment="Center"
                        Content="Job Position:" />
                    <ComboBox
                        x:Name="JobPositionComboBox"
                        Grid.Row="3"
                        Grid.Column="1"
                        Margin="5" />

                    <Label
                        x:Name="Staff_Email_Label"
                        Grid.Row="4"
                        Grid.Column="0"
                        Margin="0,5"
                        VerticalAlignment="Center"
                        Content="Student Email:" />
                    <TextBox
                        x:Name="StudentEmailBox"
                        Grid.Row="4"
                        Grid.Column="1"
                        Margin="5" />


                </Grid>

                <!--  Employee Image Section  -->
                <StackPanel
                    Grid.Column="1"
                    Margin="20,0,0,0"
                    VerticalAlignment="Top">
                    <Label Margin="0,0,0,5" Content="Employee Image:" />
                    <Border
                        Width="150"
                        Height="150"
                        Margin="0,0,0,10"
                        Background="#FFF"
                        BorderBrush="Gray"
                        BorderThickness="1">
                        <Grid>
                            <Image
                                Opacity="0.5"
                                Source="/Images/User_Blank.jpg"
                                Stretch="Uniform" />
                            <Image
                                x:Name="EmployeeImage"
                                IsHitTestVisible="False"
                                Stretch="UniformToFill" />
                        </Grid>
                    </Border>
                    <Button
                        Width="120"
                        Margin="0,0,0,5"
                        Click="UploadImage_Click"
                        Content="Upload Image" />
                    <Button
                        Width="120"
                        Click="DeleteImage_Click"
                        Content="Delete Image" />
                </StackPanel>
            </Grid>

            <!--  Action Buttons  -->
            <StackPanel
                Grid.Row="2"
                Margin="0,20,0,0"
                HorizontalAlignment="Center"
                Orientation="Horizontal">
                <Button
                    Width="150"
                    Height="40"
                    Margin="10"
                    Click="EditEmployee_Click"
                    Content="Save"
                    FontWeight="Bold" />
                <Button
                    Width="150"
                    Height="40"
                    Margin="10"
                    Click="cancelBtn_Click"
                    Content="Cancel"
                    FontWeight="Bold" />
            </StackPanel>
        </Grid>
    </Border>
</Page>
