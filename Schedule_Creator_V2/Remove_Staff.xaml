<Page
    x:Class="Schedule_Creator_V2.Remove_Staff"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Schedule_Creator_V2"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Remove_Staff"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid Margin="20">
        <Border
            Padding="20"
            Background="White"
            BorderBrush="#CCC"
            BorderThickness="1"
            CornerRadius="10"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">

            <StackPanel Width="320" HorizontalAlignment="Center" VerticalAlignment="Center">

                <!-- Staff Selection -->
                <Label x:Name="StaffSelectorLabel" Content="Select Staff Member:" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,5"/>
                <ComboBox
                    x:Name="StaffSelector"
                    Height="35"
                    Padding="5"
                    BorderBrush="#BBB"
                    BorderThickness="1"
                    DisplayMemberPath="displayName"
                    Margin="0,0,0,20"/>

                <!-- Confirm Deletion -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                    <CheckBox x:Name="ConfirmDeleteCheckBox" VerticalAlignment="Center"/>
                    <Label
                        x:Name="ConformationLabel"
                        Margin="5,0,0,0"
                        VerticalAlignment="Center"
                        Content="I confirm I want to delete this staff member."
                        FontSize="12"/>
                </StackPanel>

                <!-- Buttons -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <!-- Delete Button -->
                    <Border CornerRadius="10" Margin="0,0,10,0">
                        <Button
                            Width="100"
                            Height="35"
                            Content="Delete"
                            Click="DeleteButton_Click"
                            BorderThickness="0"
                            FontWeight="Bold"/>
                    </Border>

                    <!-- Cancel Button -->
                    <Border CornerRadius="10">
                        <Button
                            Width="100"
                            Height="35"
                            Content="Cancel"
                            Click="CancelButton_Click"
                            BorderThickness="0"
                            FontWeight="Bold"/>
                    </Border>
                </StackPanel>

            </StackPanel>
        </Border>
    </Grid>
</Page>
