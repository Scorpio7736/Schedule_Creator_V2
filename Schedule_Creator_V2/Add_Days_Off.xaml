<Page
    x:Class="Schedule_Creator_V2.Add_Days_Off"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Schedule_Creator_V2"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Add_Days_Off"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid Background="#F5F7FB">
        <Border
            Margin="30"
            Padding="30"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Background="White"
            BorderBrush="#D0D7E5"
            BorderThickness="1.5"
            CornerRadius="18">
            <Border.Effect>
                <DropShadowEffect
                    BlurRadius="18"
                    Color="#1F2A4B"
                    Direction="270"
                    Opacity="0.15"
                    ShadowDepth="8" />
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!--  Header  -->
                <StackPanel Grid.Row="0" Margin="0,0,0,25">
                    <TextBlock
                        FontSize="28"
                        FontWeight="SemiBold"
                        Foreground="#1F2A4B"
                        Text="Add Days Off" />
                    <TextBlock
                        Margin="0,10,0,0"
                        FontSize="14"
                        Foreground="#52607C"
                        Text="Capture staff time away in just a few steps. Provide the requested range and a quick note so the team stays aligned." />
                </StackPanel>

                <!--  Form section  -->
                <Border
                    Grid.Row="1"
                    Padding="20"
                    Background="#F9FBFF"
                    BorderBrush="#E1E7F5"
                    BorderThickness="1"
                    CornerRadius="12">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="180" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <!--  Staff Member Label  -->
                        <Label
                            x:Name="StaffMemberLabel"
                            Grid.Row="0"
                            Grid.Column="0"
                            Margin="0,0,15,15"
                            VerticalAlignment="Center"
                            FontWeight="SemiBold"
                            Foreground="#1F2A4B"
                            Content="Staff Member" />
                        <!--  Staff Member ComboBox  -->
                        <ComboBox
                            Name="StaffComboBox"
                            Grid.Row="0"
                            Grid.Column="1"
                            Margin="0,0,0,15"
                            Padding="8"
                            MinWidth="240"
                            Background="White"
                            BorderBrush="#CBD4E6"
                            BorderThickness="1"
                            DisplayMemberPath="displayName" />

                        <!--  Start Date Label  -->
                        <Label
                            x:Name="StartDateLabel"
                            Grid.Row="1"
                            Grid.Column="0"
                            Margin="0,0,15,15"
                            VerticalAlignment="Center"
                            FontWeight="SemiBold"
                            Foreground="#1F2A4B"
                            Content="Start Date" />
                        <!--  Start DatePicker  -->
                        <DatePicker
                            Name="StartDatePicker"
                            Grid.Row="1"
                            Grid.Column="1"
                            Margin="0,0,0,15"
                            Padding="6"
                            Background="White"
                            BorderBrush="#CBD4E6"
                            BorderThickness="1" />

                        <!--  End Date Label  -->
                        <Label
                            x:Name="EndDateLabel"
                            Grid.Row="2"
                            Grid.Column="0"
                            Margin="0,0,15,15"
                            VerticalAlignment="Center"
                            FontWeight="SemiBold"
                            Foreground="#1F2A4B"
                            Content="End Date" />
                        <!--  End DatePicker  -->
                        <DatePicker
                            Name="EndDatePicker"
                            Grid.Row="2"
                            Grid.Column="1"
                            Margin="0,0,0,15"
                            Padding="6"
                            Background="White"
                            BorderBrush="#CBD4E6"
                            BorderThickness="1" />

                        <!--  Reason box  -->
                        <Label
                            x:Name="ReasonLabel"
                            Grid.Row="3"
                            Grid.Column="0"
                            Margin="0,0,15,0"
                            VerticalAlignment="Top"
                            FontWeight="SemiBold"
                            Foreground="#1F2A4B"
                            Content="Reason for days off" />

                        <StackPanel Grid.Row="3" Grid.Column="1">
                            <TextBox
                                x:Name="ReasonBox"
                                MinHeight="80"
                                Margin="0,0,0,5"
                                Padding="10"
                                Background="White"
                                BorderBrush="#CBD4E6"
                                BorderThickness="1"
                                TextWrapping="Wrap"
                                AcceptsReturn="True"
                                VerticalScrollBarVisibility="Auto" />
                            <TextBlock
                                Margin="0,4,0,0"
                                FontSize="12"
                                Foreground="#7A879F"
                                Text="Helpful details keep the schedule accurate." />
                        </StackPanel>
                    </Grid>
                </Border>

                <!--  Summary section  -->
                <Border
                    Grid.Row="2"
                    Margin="0,25,0,25"
                    Padding="20"
                    Background="#FFFFFF"
                    BorderBrush="#E4E9F4"
                    BorderThickness="1"
                    CornerRadius="12">
                    <StackPanel>
                        <TextBlock
                            FontSize="18"
                            FontWeight="SemiBold"
                            Foreground="#1F2A4B"
                            Text="Days Off Overview" />
                        <TextBlock
                            Margin="0,8,0,0"
                            FontSize="13"
                            Foreground="#5E6A84"
                            Text="Double-check the information before saving to keep the team calendar clean." />

                        <Border
                            Margin="0,18,0,0"
                            Padding="16"
                            Background="#F4F7FF"
                            BorderBrush="#D7E0F5"
                            BorderThickness="1"
                            CornerRadius="10">
                            <StackPanel>
                                <TextBlock
                                    FontSize="14"
                                    FontWeight="SemiBold"
                                    Foreground="#364363"
                                    Text="Staff" />
                                <TextBlock
                                    Margin="0,4,0,0"
                                    FontSize="14"
                                    Foreground="#1F2A4B"
                                    Text="{Binding SelectedItem.displayName, ElementName=StaffComboBox}" />
                            </StackPanel>
                        </Border>

                        <Grid Margin="0,16,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Border
                                Margin="0,0,12,0"
                                Padding="16"
                                Background="#F4F7FF"
                                BorderBrush="#D7E0F5"
                                BorderThickness="1"
                                CornerRadius="10">
                                <StackPanel>
                                    <TextBlock
                                        FontSize="14"
                                        FontWeight="SemiBold"
                                        Foreground="#364363"
                                        Text="Start Date" />
                                    <TextBlock
                                        Margin="0,4,0,0"
                                        FontSize="14"
                                        Foreground="#1F2A4B">
                                        <Run Text="{Binding SelectedDate, ElementName=StartDatePicker, StringFormat=\{0:MMMM d, yyyy\}}" />
                                    </TextBlock>
                                </StackPanel>
                            </Border>
                            <Border
                                Grid.Column="1"
                                Margin="12,0,0,0"
                                Padding="16"
                                Background="#F4F7FF"
                                BorderBrush="#D7E0F5"
                                BorderThickness="1"
                                CornerRadius="10">
                                <StackPanel>
                                    <TextBlock
                                        FontSize="14"
                                        FontWeight="SemiBold"
                                        Foreground="#364363"
                                        Text="End Date" />
                                    <TextBlock
                                        Margin="0,4,0,0"
                                        FontSize="14"
                                        Foreground="#1F2A4B">
                                        <Run Text="{Binding SelectedDate, ElementName=EndDatePicker, StringFormat=\{0:MMMM d, yyyy\}}" />
                                    </TextBlock>
                                </StackPanel>
                            </Border>
                        </Grid>

                        <Border
                            Margin="0,16,0,0"
                            Padding="16"
                            Background="#F4F7FF"
                            BorderBrush="#D7E0F5"
                            BorderThickness="1"
                            CornerRadius="10">
                            <StackPanel>
                                <TextBlock
                                    FontSize="14"
                                    FontWeight="SemiBold"
                                    Foreground="#364363"
                                    Text="Reason" />
                                <TextBlock
                                    Margin="0,4,0,0"
                                    FontSize="14"
                                    Foreground="#1F2A4B"
                                    TextWrapping="Wrap"
                                    Text="{Binding Text, ElementName=ReasonBox}" />
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>

                <!--  Buttons  -->
                <StackPanel
                    Grid.Row="3"
                    Margin="0,10,0,0"
                    HorizontalAlignment="Stretch"
                    Orientation="Horizontal"
                    VerticalAlignment="Bottom"
                    HorizontalContentAlignment="Right">
                    <StackPanel.Resources>
                        <Style TargetType="Button">
                            <Setter Property="Padding" Value="14,8" />
                            <Setter Property="Margin" Value="0,0,12,0" />
                            <Setter Property="FontWeight" Value="SemiBold" />
                            <Setter Property="FontSize" Value="14" />
                            <Setter Property="BorderThickness" Value="0" />
                        </Style>
                    </StackPanel.Resources>

                    <Button
                        Name="CancelButton"
                        Width="120"
                        Background="#E6EAF4"
                        Foreground="#364363"
                        Click="CancelBtnClick"
                        Content="Cancel" />
                    <Button
                        Name="SaveButton"
                        Width="140"
                        Background="#3F6DF3"
                        Foreground="White"
                        Margin="0"
                        Click="SaveBtnClick"
                        Content="Save Days Off" />
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>
