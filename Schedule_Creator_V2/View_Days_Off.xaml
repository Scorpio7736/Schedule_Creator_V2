<Page x:Class="Schedule_Creator_V2.View_Days_Off"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Schedule_Creator_V2"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="View_Days_Off">

    <Border Margin="10" Background="White" CornerRadius="10" BorderBrush="Gray" BorderThickness="1">
        <Grid Margin="20" >
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Date Picker with Label -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10" HorizontalAlignment="Center">
                <TextBlock Text="Select By Date:" VerticalAlignment="Center" FontWeight="Bold" Margin="0,0,10,0"/>
                <DatePicker x:Name="DaysOffDatePicker" Width="200" SelectedDateChanged="FillDateGrid"/>
                <TextBlock Text="OR" VerticalAlignment="Center" FontWeight="Bold" Margin="30,0,30,0"/>
                <TextBlock Text="Select By Staff:" VerticalAlignment="Center" FontWeight="Bold" Margin="0,0,10,0"/>
                <ComboBox x:Name="DaysOffComboBox" Width="200" SelectionChanged="FillComboGrid" DisplayMemberPath="displayName"/>

            </StackPanel>

            <!-- DataGrid -->
            <DataGrid Grid.Row="1" x:Name="DaysOffDataGrid" AutoGenerateColumns="False" HeadersVisibility="Column" CanUserAddRows="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="First Name" Binding="{Binding fName}" Width="*"/>
                    <DataGridTextColumn Header="Last Name" Binding="{Binding lName}" Width="*"/>
                    <DataGridTextColumn Header="Date Off" Binding="{Binding date}" Width="*"/>
                    <DataGridTextColumn Header="Reason" Binding="{Binding reason}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Border>
</Page>
