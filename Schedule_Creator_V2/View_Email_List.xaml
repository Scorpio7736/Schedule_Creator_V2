<Page
    x:Class="Schedule_Creator_V2.View_Email_List"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Schedule_Creator_V2"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="View_Email_List"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Border
        Margin="10"
        Background="White"
        BorderBrush="Gray"
        BorderThickness="1"
        CornerRadius="10">
        <Grid Margin="20">

            <StackPanel>

                <!--  ComboBox for Availability Selection  -->
                <StackPanel Margin="0,0,0,20" Orientation="Horizontal">
                    <Label VerticalAlignment="Center" Content="Availability Selected:" />
                    <ComboBox
                        Name="AvailabilityComboBox"
                        Width="200"
                        Margin="10,0"
                        SelectionChanged="LoadData"
                        />
                </StackPanel>

                <!--  Grid dividing page into two  -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="3*" />
                    </Grid.ColumnDefinitions>

                    <!--  Left Panel  -->
                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                        <Label Content="List of Emails:" />
                        <TextBox
                            IsReadOnly="True"
                            Name="EmailsTextBox"
                            Height="150"
                            TextWrapping="Wrap"
                            VerticalScrollBarVisibility="Auto" />
                        <Button
                            Width="80"
                            Margin="0,10,0,0"
                            Click="CopyButton_Click"
                            Content="Copy" />
                    </StackPanel>

                    <!--  Right Panel - DataGrid  -->
                    <DataGrid
                        Name="UsersDataGrid"
                        Grid.Column="1"
                        Margin="10,0,0,0"
                        AutoGenerateColumns="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn
                                Width="*"
                                Binding="{Binding fName}"
                                Header="First Name" />
                            <DataGridTextColumn
                                Width="*"
                                Binding="{Binding lName}"
                                Header="Last Name" />
                            <DataGridTextColumn
                                Width="2*"
                                Binding="{Binding email}"
                                Header="Email" />
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </StackPanel>


        </Grid>
    </Border>
</Page>
