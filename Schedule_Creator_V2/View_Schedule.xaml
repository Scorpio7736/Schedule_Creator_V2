<Page x:Class="Schedule_Creator_V2.View_Schedule"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Schedule_Creator_V2"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="View_Schedule">

    <Grid>
        <Border
    Margin="20"
    Padding="20"
    HorizontalAlignment="Stretch"
    VerticalAlignment="Stretch"
    Background="White"
    BorderBrush="#DDD"
    BorderThickness="1"
    CornerRadius="10">
            <Grid Margin="20" Background="white">
                <StackPanel Grid.Row="0">
                    
                </StackPanel>
                <DataGrid Grid.Row="1" x:Name="ScheduleGrid">
                    <DataGrid.Columns>
                        <DataGridTextColumn
                            Width="*"
                            Binding="{Binding AvailMon}"
                            Header="Monday"
                            />

                        <DataGridTextColumn
                            Width="*"
                            Binding="{Binding AvailTue}"
                            Header="Tuesday"
                            />

                        <DataGridTextColumn
                            Width="*"
                            Binding="{Binding AvailWed}"
                            Header="Wed"
                            />

                        <DataGridTextColumn
                            Width="*"
                            Binding="{Binding AvailThu}"
                            Header="Thu"
                            />

                        <DataGridTextColumn
                            Width="*"
                            Binding="{Binding AvailFri}"
                            Header="Fri"
                            />

                        <DataGridTextColumn
                            Width="*"
                            Binding="{Binding AvailSat}"
                            Header="Sat"
                            />

                        <DataGridTextColumn
                            Width="*"
                            Binding="{Binding AvailSun}"
                            Header="Sun"
                            />
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>
    </Grid>
</Page>
