<Page x:Class="Schedule_Creator_V2.View_Schedule"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Schedule_Creator_V2"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="View_Schedule">

    <Border Margin="10" Background="White" CornerRadius="10" BorderBrush="Gray" BorderThickness="1">
        <Grid Margin="20" >
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Date Picker with Label -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10" HorizontalAlignment="Center">
                <TextBlock Text="Select Date:" VerticalAlignment="Center" FontWeight="Bold" Margin="0,0,10,0"/>
                <DatePicker x:Name="ScheduleDatePicker" Width="200" SelectedDateChanged="FillGrid"/>
            </StackPanel>

            <!-- DataGrid -->
            <DataGrid Grid.Row="1" x:Name="ScheduleDataGrid" AutoGenerateColumns="False" HeadersVisibility="Column" CanUserAddRows="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="First Name" Binding="{Binding fName}" Width="*"/>
                    <DataGridTextColumn Header="Last Name" Binding="{Binding lName}" Width="*"/>
                    <DataGridTextColumn Header="Available Times" Binding="{Binding availTimes}" Width="*"/>
                    <DataGridTextColumn Header="Position" Binding="{Binding position}" Width="*"/>
                    <DataGridTextColumn Header="Belay Certification" Binding="{Binding certRange}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Border>
</Page>
