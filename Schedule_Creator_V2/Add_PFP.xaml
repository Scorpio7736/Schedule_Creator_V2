<Page
    x:Class="Schedule_Creator_V2.Add_PFP"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Schedule_Creator_V2"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Add_PFP"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid Margin="20" Background="#F9F9F9">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Staff Selector  -->
        <StackPanel
            Margin="0,0,0,20"
            HorizontalAlignment="Left"
            Orientation="Horizontal">
            <Label
                x:Name="SelectStaffLabel"
                Margin="0,0,10,0"
                VerticalAlignment="Center"
                Content="Select Staff:" />
            <ComboBox
                x:Name="StaffSelector"
                Width="250"
                DisplayMemberPath="displayName"
                SelectionChanged="SelectStaff" />
        </StackPanel>

        <!--  Image and Image Buttons  -->
        <StackPanel
            Grid.Row="1"
            HorizontalAlignment="Left"
            Orientation="Vertical">

            <Border
                Width="200"
                Height="200"
                Margin="0,0,0,10"
                Background="#FFF"
                BorderBrush="Gray"
                BorderThickness="1">
                <Grid>
                    <Image Source="/Images/User_Blank.jpg" Stretch="UniformToFill" />
                    <Image Name="EmployeeImage" Stretch="UniformToFill" Visibility="Visible"/>
                </Grid>
            </Border>

            <StackPanel Orientation="Horizontal">
                <Button
                    Width="90"
                    Margin="0,0,10,0"
                    Click="UploadImage_Click"
                    Content="Upload" />
                <Button
                    Width="90"
                    Click="DeleteImage_Click"
                    Content="Delete" />
            </StackPanel>
        </StackPanel>

        <!--  Save and Close Buttons  -->
        <StackPanel
            Grid.Row="3"
            Margin="0,20,0,0"
            HorizontalAlignment="Center"
            Orientation="Horizontal">
            <Button
                Width="150"
                Height="40"
                Margin="10"
                Click="SaveButton_Click"
                Content="Save"
                FontWeight="Bold" />
            <Button
                Width="150"
                Height="40"
                Margin="10"
                Click="CloseButton_Click"
                Content="Close"
                FontWeight="Bold" />
        </StackPanel>
    </Grid>
</Page>
