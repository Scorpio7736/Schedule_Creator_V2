<Page
    x:Class="Schedule_Creator_V2.Add_Job_Settings"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
    Title="Add_Collection"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid Background="Transparent">
        <Border
            Margin="20"
            Padding="20"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Background="White"
            BorderBrush="#DDD"
            BorderThickness="1"
            CornerRadius="10">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="AUTO" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="AUTO" />
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0">
                    <Label
                        HorizontalAlignment="Center"
                        Content="Job Hour Settings"
                        FontWeight="Bold" />
                </StackPanel>

                <DataGrid
                    x:Name="DaysOffDataGrid"
                    Grid.Row="1"
                    AutoGenerateColumns="False"
                    CanUserAddRows="False"
                    HeadersVisibility="Column">
                    <DataGrid.Columns>
                        <DataGridTextColumn Width="*" Binding="{Binding dayOfWeek}" Header="Day of the week" />
                        <DataGridTextColumn Width="*" Binding="{Binding openTime}" Header="Start Time" />
                        <DataGridTextColumn Width="*" Binding="{Binding closeTime}" Header="End Time" />
                        <DataGridTextColumn Width="*" Binding="{Binding dayOfWeek}" Header="Add Another" />
                    </DataGrid.Columns>
                </DataGrid>

                <StackPanel
                    x:Name="ButtonPannel"
                    Grid.Row="2"
                    HorizontalAlignment="Right"
                    Orientation="Horizontal">
                    <Button
                        Width="150"
                        Height="50"
                        Click="SaveButton_Click"
                        Content="Save" />
                    <Button
                        Width="150"
                        Height="50"
                        Click="CancelButton_Click"
                        Content="Cancel" />
                </StackPanel>

            </Grid>

        </Border>
    </Grid>
</Page>
