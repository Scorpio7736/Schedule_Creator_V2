                                    FontWeight="SemiBold" />
                                <xctk:TimePicker
                                    x:Name="WednesdayClosingTimePicker"
                                    Height="30"
                                    Format="ShortTime"
                                    IsEnabled="False"
                                    ShowButtonSpinner="True"
                                    TimeInterval="00:15:00" />
                            </StackPanel>
                        </Grid>

                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="160" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <CheckBox
                                x:Name="ThursdayCheckBox"
                                Grid.Column="0"
                                VerticalAlignment="Center"
                                Content="Thursday" />

                            <StackPanel Grid.Column="1" Margin="10,0,10,0">
                                <Label
                                    Margin="0,0,0,5"
                                    Content="Opening Time"
                                    FontWeight="SemiBold" />
                                <xctk:TimePicker
                                    x:Name="ThursdayOpeningTimePicker"
                                    Height="30"
                                    Format="ShortTime"
                                    IsEnabled="False"
                                    ShowButtonSpinner="True"
                                    TimeInterval="00:15:00" />
                            </StackPanel>

                            <StackPanel Grid.Column="2">
                                <Label
                                    Margin="0,0,0,5"
                                    Content="Closing Time"
                                    FontWeight="SemiBold" />
                                <xctk:TimePicker
                                    x:Name="ThursdayClosingTimePicker"
                                    Height="30"
