                                    Height="30"
                                    Format="ShortTime"
                                    IsEnabled="False"
                                    ShowButtonSpinner="True"
                                    TimeInterval="00:15:00" />
                            </StackPanel>
                        </Grid>

                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="160" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <CheckBox
                                x:Name="WednesdayCheckBox"
                                Grid.Column="0"
