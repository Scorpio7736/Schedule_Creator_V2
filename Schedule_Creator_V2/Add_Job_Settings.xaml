                                    FontWeight="SemiBold" />
                                <xctk:TimePicker
                                    x:Name="SaturdayClosingTimePicker"
                                    Height="30"
                                    Format="ShortTime"
                                    IsEnabled="False"
                                    ShowButtonSpinner="True"
                                    TimeInterval="00:15:00" />
                            </StackPanel>
                        </Grid>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="160" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <CheckBox
                                x:Name="SundayCheckBox"
                                Grid.Column="0"
                                VerticalAlignment="Center"
                                Content="Sunday" />

                            <StackPanel Grid.Column="1" Margin="10,0,10,0">
                                <Label
                                    Margin="0,0,0,5"
                                    Content="Opening Time"
                                    FontWeight="SemiBold" />
                                <xctk:TimePicker
                                    x:Name="SundayOpeningTimePicker"
                                    Height="30"
                                    Format="ShortTime"
                                    IsEnabled="False"
                                    ShowButtonSpinner="True"
                                    TimeInterval="00:15:00" />
                            </StackPanel>

                            <StackPanel Grid.Column="2">
                                <Label
                                    Margin="0,0,0,5"
                                    Content="Closing Time"
                                    FontWeight="SemiBold" />
                                <xctk:TimePicker
                                    x:Name="SundayClosingTimePicker"
                                    Height="30"
                                    Format="ShortTime"
                                    IsEnabled="False"
                                    ShowButtonSpinner="True"
                                    TimeInterval="00:15:00" />
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </StackPanel>

                <StackPanel
                    Grid.Row="1"
                    HorizontalAlignment="Right"
                    Orientation="Horizontal">
                    <Button
                        x:Name="SaveButton"
                        Width="100"
                        Height="35"
                        Margin="0,0,10,0"
                        Click="SaveButton_Click"
                        Content="Save" />
                    <Button
                        x:Name="CancelButton"
                        Width="100"
                        Height="35"
                        Click="CancelButton_Click"
                        Content="Cancel" />
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>
